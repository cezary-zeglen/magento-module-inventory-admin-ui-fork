<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreateCreditMemoTotalRefundVirtualProductDefaultStock" extends="AdminCreateCreditMemoPartialRefundVirtualProductCustomStock">
        <annotations>
            <stories value="Virtual Product Default Stock."/>
            <title value="Create Credit Memo, total refund with virtual product on default stock."/>
            <description value="Verify, admin create Credit Memo with total refund to stock for order with Virtual product with custom option on Default source."/>
            <testCaseId value="https://app.hiptest.com/projects/69435/test-plan/folders/735141/scenarios/1695035"/>
            <severity value="CRITICAL"/>
            <group value="msi"/>
            <group value="multi_mode"/>
        </annotations>

        <before>
            <!--Remove additional stock.-->
            <remove keyForRemoval="additionalStock"/>
            <remove keyForRemoval="linkSourceStock"/>
            <!--Assign Default Stock to Default Website.-->
            <actionGroup ref="AssignWebsiteToStockActionGroup" stepKey="assignMainWebsiteToDefaultStock" after="loginAsAdmin">
                <argument name="stockName" value="{{_defaultStock.name}}"/>
                <argument name="websiteName" value="{{_defaultWebsite.name}}"/>
            </actionGroup>
        </before>
        <after>
            <remove keyForRemoval="assignMainWebsiteToDefaultStock"/>
            <remove keyForRemoval="deleteStock"/>
        </after>
        <!--Set default stock quantity.-->
        <remove keyForRemoval="assignTestSourceToCreatedProduct"/>
        <remove keyForRemoval="setProductQuantity"/>
        <fillField selector="{{AdminProductSourcesGrid.rowQty('0')}}" userInput="100" stepKey="setProductQuantity" after="openProductEditPage"/>
        <!--Verify product quantity after order placement.-->
        <remove keyForRemoval="checkProductSourceQtyAfterPlaceOrder"/>
        <remove keyForRemoval="checkSalableQtyAfterPlaceOrder"/>
        <see selector="{{AdminProductGridSection.productQtyPerSource('1', _defaultSource.name)}}" userInput="100" stepKey="checkProductSourceQtyAfterPlaceOrder" after="findProductBySkuToCheckQtyAfterPlaceOrder"/>
        <see selector="{{AdminProductGridSection.productSalableQty('1', _defaultStock.name)}}" userInput="95" stepKey="checkSalableQtyAfterPlaceOrder" after="checkProductSourceQtyAfterPlaceOrder"/>
        <!--Admin Area Create Total Refund Credit Memo-->
        <remove keyForRemoval="partialRefund"/>
        <remove keyForRemoval="updateQuantityToRefund"/>
        <remove keyForRemoval="updateQuantityLoadingMask"/>
        <!--Verify product quantity.-->
        <remove keyForRemoval="checkProductSourceQtyAfterCreditMemo"/>
        <remove keyForRemoval="checkSalableQtyAfterCreditMemo"/>
        <see selector="{{AdminProductGridSection.productQtyPerSource('1', _defaultSource.name)}}" userInput="100" stepKey="checkProductSourceQtyAfterCreditMemo" after="findProductBySkuToCheckQtyAfterCreditMemo"/>
        <see selector="{{AdminProductGridSection.productSalableQty('1', _defaultStock.name)}}" userInput="100" stepKey="checkSalableQtyAfterCreditMemo" after="checkProductSourceQtyAfterCreditMemo"/>
    </test>
</tests>
