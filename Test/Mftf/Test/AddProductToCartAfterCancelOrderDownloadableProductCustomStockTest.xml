<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AddProductToCartAfterCancelOrderDownloadableProductCustomStockTest" extends="AdminCreateDownloadableProductWithCustomStockTest">
        <annotations>
            <stories value="Downloadable Product Custom Stock."/>
            <title value="Add Downloadable Product after Cancel Order Custom Stock."/>
            <description value="Verify, customer able to add downloadable product to cart with correct quantity after cancel order on custom stock."/>
            <testCaseId value="https://app.hiptest.com/projects/69435/test-plan/folders/735246/scenarios/1466557"/>
            <severity value="MAJOR"/>
            <group value="msi"/>
            <group value="multi_mode"/>
        </annotations>

        <before>
            <createData entity="MsiCustomer1" stepKey="customer" after="linkSourceStock1"/>
        </before>
        <after>
            <deleteData createDataKey="customer" stepKey="deleteCustomer" after="deleteCustomStock"/>
        </after>

        <!-- Login as customer -->
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefront">
            <argument name="Customer" value="$$customer$$"/>
        </actionGroup>
        <!-- Add product to shopping cart -->
        <amOnPage url="{{StorefrontProductPage.url($$downloadableProduct1.custom_attributes[url_key]$$)}}" stepKey="goToPDP"/>
        <waitForPageLoad stepKey="waitForProductPage"/>
        <checkOption selector="{{StorefrontDownloadableProductSection.downloadableLinkByTitle(downloadableLink.title)}}" stepKey="selectLink"/>
        <click selector="{{StorefrontProductPageSection.addToCartBtn}}" stepKey="addToCart"/>
        <waitForElementVisible selector="{{StorefrontMessagesSection.success}}" stepKey="waitForProductAddedMessage"/>
        <see selector="{{StorefrontMessagesSection.success}}" userInput="You added $$downloadableProduct1.name$$ to your shopping cart." stepKey="seeAddToCartSuccessMessage"/>
        <!--Place order.-->
        <actionGroup ref="GoToCheckoutFromMinicartActionGroup" stepKey="navigateToCheckout"/>
        <click selector="{{CheckoutPaymentSection.placeOrder}}" stepKey="placeOrder"/>
        <waitForPageLoad stepKey="waitUntilOrderPlaced"/>
        <grabTextFrom selector="{{CheckoutSuccessMainSection.orderNumber22}}" stepKey="orderNumber"/>
        <see selector="{{CheckoutSuccessMainSection.success}}" userInput="Your order number is:" stepKey="checkOrderPlaceSuccessMessage"/>
        <!--Cancel order-->
        <actionGroup ref="OpenOrderById" stepKey="openOrder">
            <argument name="orderId" value="{$orderNumber}"/>
        </actionGroup>
        <click selector="{{AdminOrderDetailsMainActionsSection.cancel}}" stepKey="clickCancelOrder"/>
        <waitForElement selector="{{AdminConfirmationModalSection.message}}" stepKey="waitForCancelConfirmation"/>
        <see selector="{{AdminConfirmationModalSection.message}}" userInput="Are you sure you want to cancel this order?" stepKey="seeConfirmationMessage"/>
        <click selector="{{AdminConfirmationModalSection.ok}}" stepKey="confirmOrderCancel"/>
        <see selector="{{AdminMessagesSection.success}}" userInput="You canceled the order." stepKey="seeCancelSuccessMessage"/>
        <!--Add downloadable product to cart with improper quantity.-->
        <amOnPage url="{{StorefrontProductPage.url($$downloadableProduct1.custom_attributes[url_key]$$)}}" stepKey="goToProductPage"/>
        <waitForPageLoad stepKey="waitForProductEditPage"/>
        <checkOption selector="{{StorefrontDownloadableProductSection.downloadableLinkByTitle(downloadableLink.title)}}" stepKey="selectLinkToAddProductToCart"/>
        <click selector="{{StorefrontProductPageSection.addToCartBtn}}" stepKey="addToCartDownloadableProduct"/>
        <click selector="{{StorefrontMiniCartSection.show}}" stepKey="clickMiniCart"/>
        <fillField selector="{{StorefrontMinicartSection.itemQuantity($$downloadableProduct1.name$$)}}" userInput="101" stepKey="addIncorrectQty"/>
        <click selector="{{StorefrontMinicartSection.itemQuantityUpdate($$downloadableProduct1.name$$)}}" stepKey="updateQty"/>
        <waitForPageLoad stepKey="waitForModal"/>
        <see selector="{{ModalConfirmationSection.modalContent}}" userInput="The requested qty is not available" stepKey="verifyErrorMessage"/>
        <click selector="{{ModalConfirmationSection.OkButton}}" stepKey="confirmRequestedQuantityIsNotAvailable"/>
        <waitForPageLoad stepKey="waitForModalClose"/>
        <!--Add downloadable product with proper quantity.-->
        <click selector="{{StorefrontMiniCartSection.show}}" stepKey="clickMiniCartAgain"/>
        <fillField selector="{{StorefrontMinicartSection.itemQuantity($$downloadableProduct1.name$$)}}" userInput="100" stepKey="addCorrectQty"/>
        <click selector="{{StorefrontMinicartSection.itemQuantityUpdate($$downloadableProduct1.name$$)}}" stepKey="updateQtyAgain"/>
        <waitForPageLoad stepKey="waitForPossibleErrorMessage"/>
        <dontSee userInput="The requested qty is not available" stepKey="verifyErrorMessageNotAppeared"/>
    </test>
</tests>
